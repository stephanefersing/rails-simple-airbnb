<div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
        <div class="mt-3">
          <h1>Add a new flat</h1>
          <%= simple_form_for @flat do |f| %>
            <%= f.input :name %>
            <%= f.input :address %>
            <%= f.input :description %>
            <%= f.input :price_per_night %>
            <%= f.input :number_of_guests %>
            <%= f.submit %>
          <% end %>
        </div>
      </div>
    </div>
</div>
